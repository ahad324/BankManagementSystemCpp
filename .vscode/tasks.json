{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "cppbuild",
          "label": "C/C++: Custom build",
          "command": "C:\\MinGW\\bin\\g++.exe",
          "args": [
              "-Iinclude",
              "Main.cpp",
              "src/*.cpp",
              "resource.o",
